<?xml version="1.0" encoding="UTF-8"?>
<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2" method="upgrade">
 
    <name>Map Marker</name>
    <creationDate>16/12/2014</creationDate>
    <author>Everaldo Reis</author>
    <authorEmail>contato@everaldoreis.com.br</authorEmail>
    <authorUrl>http://www.everaldoreis.com.br</authorUrl>
    <copyright>Todos os direitos reservados</copyright>
    <license>GPLv2</license>
    <version>0.0.1</version>
    <description>Listagem de locais</description>
 
    <update> 
        <schemas>
            <schemapath type="mysql">sql/updates/mysql/</schemapath>
        </schemas>
    </update>
 
    <!-- Site Main File Copy Section -->
    <!-- Note the folder attribute: This attribute describes the folder
    to copy FROM in the package to install therefore files copied
    in this section are copied from /site/ in the package -->
    <files folder="site">
        <filename>index.html</filename>
        <filename>mapmarker.php</filename>
        <filename>model.php</filename>
        <filename>view.php</filename>
        <filename>controller.php</filename>
        <filename>models</filename>
        <filename>views</filename>
        <filename>controllers</filename>
        <filename>helpers</filename>
        <filename>language</filename>
        <filename>media</filename>
        <filename>js</filename>
        <filename>css</filename>
    </files>
 
    <administration>
        <menu>Map Marker</menu>
        <submenu>
            <menu action="markers">Markers</menu>
        </submenu>
        <files folder="admin">
            <filename>index.html</filename>
            <filename>mapmarker.php</filename>
            <filename>model.php</filename>
            <filename>view.php</filename>
            <filename>controller.php</filename>
            <filename>config.xml</filename>
            <filename>access.xml</filename>
            <filename>models</filename>
            <filename>views</filename>
            <filename>controllers</filename>
            <filename>tables</filename>
            <filename>helpers</filename>
            <filename>language</filename>
            <filename>media</filename>
            <filename>js</filename>
            <filename>css</filename>
            <folder>sql</folder>
        </files>
    </administration>
 
</extension>
